/*
 * 이것은 Brackets에 의해 환경 설정이 지원된 읽기 전용 파일입니다.
 * 이 파일은 다른 창에서 열린 "brackets.json" 환경 설정 파일을 수정하기 위한 참조로 사용합니다.
 * Brackets 환경 설정을 어떻게 하는지에 관한 더 많은 정보는 웹 페이지를 참고하세요.
 * https://github.com/adobe/brackets/wiki/How-to-Use-Brackets#preferences
 */

{
	// Close the search as soon as the editor is focused
	"autoHideSearch": true,

	// Enable/disable Brackets Auto-update
	"autoUpdate.AutoUpdate": true,

	// 기본: true
	"brackets-eslint.gutterMarks": true,

	// 기본: false
	"brackets-eslint.useLocalESLint": false,

	// 기본: true
	"brackets-git.addEndlineToTheEndOfFile": true,

	// 기본: AVATAR_COLOR
	"brackets-git.avatarType": "AVATAR_COLOR",

	"brackets-git.bashShortcut": {},

	// 기본: false
	"brackets-git.clearWhitespaceOnSave": false,

	"brackets-git.commitAllShortcut": {},

	"brackets-git.commitCurrentShortcut": {},

	"brackets-git.dateFormat": {},

	// 기본: 1
	"brackets-git.dateMode": 1,

	// 기본: false
	"brackets-git.debugMode": false,

	// 기본: false
	"brackets-git.enableAdvancedFeatures": false,

	// 기본: false
	"brackets-git.gerritPushref": false,

	// 기본: 
	"brackets-git.gitPath": "",

	// 기본: 30
	"brackets-git.gitTimeout": 30,

	"brackets-git.gotoNextChangeShortcut": {},

	"brackets-git.gotoPrevChangeShortcut": {},

	// 기본: true
	"brackets-git.markModifiedInTree": true,

	// 기본: false
	"brackets-git.normalizeLineEndings": false,

	// 기본: Ctrl-Alt-G
	"brackets-git.panelShortcut": "Ctrl-Alt-G",

	"brackets-git.pullShortcut": {},

	"brackets-git.pushShortcut": {},

	"brackets-git.refreshShortcut": {},

	// 기본: false
	"brackets-git.removeByteOrderMark": false,

	// 기본: true
	"brackets-git.showBashButton": true,

	// 기본: false
	"brackets-git.showTerminalIcon": false,

	// 기본: true
	"brackets-git.stripWhitespaceFromCommits": true,

	// 기본: 
	"brackets-git.terminalCommand": "",

	// 기본: 
	"brackets-git.terminalCommandArgs": "",

	// 기본: true
	"brackets-git.useCodeInspection": true,

	// 기본: false
	"brackets-git.useDifftool": false,

	// 기본: false
	"brackets-git.useGitFtp": false,

	// 기본: true
	"brackets-git.useGitGutter": true,

	// 기본: false
	"brackets-git.useVerboseDiff": false,

	"bracketsTerminal.settings": {
		// 기본: 15
		"fontSize": 15,

		// 기본: 8080
		"port": 8080
	},

	// 괄호(), 중괄호{}, 대괄호[]를 자동으로 닫으려면 true
	"closeBrackets": true,

	// 작업중인 파일 콘텍스트 메뉴에서 "위의 목록 닫기"를 제거하려면 false
	"closeOthers.above": true,

	// 작업중인 파일 콘텍스트 메뉴에서 "아래 목록 닫기"를 제거하려면 false
	"closeOthers.below": true,

	// 작업중인 파일 콘텍스트 메뉴에서 "다른 파일 닫기"를 제거하려면 false
	"closeOthers.others": true,

	// 태그 종료 옵션 설정
	"closeTags": {
		// 자동으로 닫지 말아야 할 태그 목록
		"dontCloseTags": [],

		// 열릴 때 빈 줄 하나를 포함해야 하는 태그 목록
		"indentTags": [],

		// 종료 태그 / 입력 시 닫기
		"whenClosing": true,

		// 시작 태그 > 입력 시 닫기
		"whenOpening": true
	},

	// 들여쓰기 수준을 변경할 때 접을 수 있는 섹션 마커를 항상 생성하려면 true
	"code-folding.alwaysUseIndentFold": false,

	// 코드 접기를 활성화 하려면 true
	"code-folding.enabled": true,

	// 빈 공간에 마우스 포인터를 두는 경우에만 섹션 접기 마커를 표시하려면 true
	"code-folding.hideUntilMouseover": false,

	// 편집기 안에서 선택한 텍스트에 대한 코드 접기 기능을 활성화 하려면 true
	"code-folding.makeSelectionsFoldable": true,

	// 모두 접기를 얼마나 깊게 적용할 것인지 수준을 제한합니다
	"code-folding.maxFoldLevel": 2,

	// 섹션 접기 아이콘을 표시하기 위한 최소 라인 수
	"code-folding.minFoldSize": 2,

	// 파일 또는 프로젝트를 닫거나 다시 열 때 접은 섹션을 기억해야 한다면 true
	"code-folding.saveFoldStates": true,

	// HTML 속성 힌트 활성/비활성
	"codehint.AttrHints": true,

	// CSS/LESS/SCSS 속성 힌트 활성/비활성
	"codehint.CssPropHints": true,

	// JavaScript 코드 힌트 활성/비활성
	"codehint.JSHints": true,

	// 환경설정 코드 힌트 활성/비활성
	"codehint.PrefHints": true,

	// SVG 코드 힌트 활성/비활성
	"codehint.SVGHints": true,

	// HTML 엔터티 힌트 활성/비활성
	"codehint.SpecialCharHints": true,

	// HTML 태그 힌트 활성/비활성
	"codehint.TagHints": true,

	// HTML & CSS/LESS/SCSS의 URL 힌트 활성/비활성
	"codehint.UrlCodeHints": true,

	// 상태 표시 줄에 오류를 표시하려면 true
	"debug.showErrorsInStatusBar": false,

	// 드래그 앤 드롭 기능 활성/비활성
	"dragDropText": false,

	// Default extensions that are disabled
	"extensions.default.disabled": [],

	// Sort Extensions using downloadCount or publishedDate
	"extensions.sort": "publishedDate",

	// 빠른 검색을 활성화 하려면 true
	"findInFiles.instantSearch": true,

	// 노드 기반 검색을 활성화 하려면 true
	"findInFiles.nodeSearch": true,

	// 글꼴 변경
	"fonts.fontFamily": "'SourceCodePro-Medium', ＭＳ ゴシック, 'MS Gothic', monospace",

	// 글꼴 크기 변경(예: 13px)
	"fonts.fontSize": "12px",

	// 맥 전용: 서브픽셀 안티 에일리어싱을 활성화 하려면 "subpixel-antialiased" 회색조 안티 에일리어싱을 활성화 하려면 "antialiased"
	"fonts.fontSmoothing": "subpixel-antialiased",

	// 상태 데이터 추적 활성화
	"healthData.healthDataTracking": true,

	// 문서 내에서 일치하는 문자열 자동 강조 활성화
	"highlightMatches": false,

	// true to enable indenting of line comments
	"indentLineComment": false,

	// Selects the way CodeMirror handles input and focus. It can be textarea, which is the default, or contenteditable which is better for screen readers (unstable)
	"inputStyle": "textarea",

	// 탭에서 현재 선택한 코드 힌트를 삽입하려면 true
	"insertHintOnTab": false,

	// 통제 불가능한 실행 Tern을 유발하도록 감지된 파일 목록
	"jscodehints.detectedExclusions": [],

	// 파일 인식 시 Tern이 초과될 때 까지의 시간
	"jscodehints.inferenceTimeout": 30000,

	// . 입력 시 JS 코드 힌트를 자동으로 표시하지 않으려면 true
	"jscodehints.noHintsOnDot": false,

	// JavaScript 코드 힌트에 데이터 타입 상세 활성/비활성
	"jscodehints.typedetails": true,

	// JSLint 기본 옵션 적용 객체
	"jslint.options": {
		// 할당 표현식을 허용하려면 true
		"ass": false,

		// 비트 연산자를 허용하려면 true
		"bitwise": false,

		// 표준 브라우저의 전역 변수를 미리 정의하려면 true
		"browser": false,

		// 구글 클로저 관용구를 허용하려면 true
		"closure": false,

		// "continue" 문을 허용하려면 true
		"continue": false,

		// CouchDB 전역 변수를 미리 정의해야 하는 경우 true
		"couch": false,

		// 디버거 문을 허용하려면 true
		"debug": false,

		// 개발 편의를 위해 브라우저 전역 변수를 미리 정의하려면 true
		"devel": false,

		// ==과 !=를 허용하려면 true
		"eqeq": false,

		// ES6 전역 변수를 미리 정의하려면 true
		"es6": false,

		// eval을 허용하려면 true
		"evil": false,

		// 필터링하지 않은 "for ... in"을 허용하려면 true
		"forin": false,

		// 탭 폭 설정
		"indent": 0,

		// 최대 경고 수
		"maxerr": 0,

		// 한개 행 최대 문자 수
		"maxlen": 0,

		// 알파벳 대문자로 시작하지 않는 생성자를 허용하려면 true
		"newcap": false,

		// Node.js 전역 변수를 미리 정의하려면 true
		"node": false,

		// 언더스코어(_)로 시작하는 식별자를 허용하려면 true
		"nomen": false,

		// 첫 오류 발생 시 중지하려면 true
		"passfail": false,

		// ++와 --를 허용하려면 true
		"plusplus": false,

		// 정규 표현식에서 .과 [^...].을 허용하려면 true
		"regexp": false,

		// Rhino 전역 변수를 미리 정의하려면 true
		"rhino": false,

		// `use strict` 지시어 생략을 허용하려면 true
		"sloppy": false,

		// 블록 ('...Sync') 메서드를 사용할 수 있는 경우 true.
		"stupid": false,

		// 비효율적인 첨자 지정을 허용하려면 true
		"sub": false,

		// TODO 주석을 허용하려면 true
		"todo": false,

		// 사용하지 않는 매개 변수를 허용하려면 true
		"unparam": false,

		// 함수 안에서 하나 이상의 변수를 허용하려면 true
		"vars": false,

		// 공백 규칙을 무시하려면 true
		"white": false
	},

	// 파일 확장자를 통해 언어 이름 매핑
	"language.fileExtensions": {},

	// 파일 이름을 통해 언어 이름 매핑
	"language.fileNames": {},

	// Preferences for Language Tools
	"languageTools":
	},

	// Doing copy and cut when there's no selection will copy or cut the whole lines that have cursors in them
	"lineWiseCopyCut": true,

	// 비동기 구문 검사 초과 시간을 밀리세컨드로 표기
	"linting.asyncTimeout": 10000,

	// 구문 검사 패널을 접어 두려면 true
	"linting.collapsed": false,

	// 코드 검사를 활성화 하려면 true
	"linting.enabled": true,

	// 최초 실행 구문 검사 배열
	"linting.prefer": [],

	// 제공자에 의해 기술된 linting.prefer 만으로 실행하려면 true
	"linting.usePreferredOnly": false,

	// false to disable live preview reverse inspect
	"livedev.enableReverseInspect": true,

	// 실험적 실시간 미리보기를 활성화 하려면 true
	"livedev.multibrowser": false,

	// Live Preview Highlight settings
	"livedev.remoteHighlight": {
		"animateEndValue": {
			// 기본: rgba(0, 162, 255, 0)
			"background-color": "rgba(0, 162, 255, 0)",

			// 기본: 0.6
			"opacity": 0.6
		},

		"animateStartValue": {
			// 기본: rgba(0, 162, 255, 0.5)
			"background-color": "rgba(0, 162, 255, 0.5)"
		},

		// 기본: rgba(21, 165, 255, 0.85)
		"borderColor": "rgba(21, 165, 255, 0.85)",

		"marginStyling": {
			// 기본: rgba(21, 165, 255, 0.58)
			"background-color": "rgba(21, 165, 255, 0.58)"
		},

		"paddingStyling": {
			// 기본: rgba(0, 162, 255, 0.5)
			"border-color": "rgba(0, 162, 255, 0.5)",

			// 기본: dashed
			"border-style": "dashed",

			// 기본: 1px
			"border-width": "1px"
		},

		// 기본: true
		"showPaddingMargin": true
	},

	// Port on which WebSocket Server runs for Live Preview
	"livedev.wsPort": 8125,

	// 한 번에 표시되는 최대 코드 힌트
	"maxCodeHints": 50,

	// Maximum Number of Search Items in Search History
	"maxSearchHistory": 10,

	// Brackets에서 코드 전용 모드를 실행하고 다른 모든 UI 요소 숨기기를 활성화 하려면 true
	"noDistractions": false,

	// 창 헤더의 닫기 버튼을 통해 마지막으로 닫힌 창을 접으려면 true
	"pane.mergePanesWhenLastFileClosed": false,

	// 헤더에 닫기 버튼과 반전 보기 버튼 표시 전환.
	"pane.showPaneHeaderButtons": "hover",

	// PHP Tooling default configuration settings
	"php": {
		// 기본: true
		"enablePhpTooling": true,

		// 기본: php
		"executablePath": "php",

		// 기본: 4095M
		"memoryLimit": "4095M",

		// 기본: false
		"validateOnType": "false"
	},

	// 분할 보기에서 파일 환경 설정 열기를 비 활성화 하려면 false
	"preferencesView.openPrefsInSplitView": true,

	// 사용자 환경 설정 파일을 좌측/상단 창에서 열려면 false
	"preferencesView.openUserPrefsInSecondPane": true,

	// 확장기능 설치를 위해 사용된 프록시 서버 URL
	"proxy": "",

	// 빠른 보기를 활성화 하려면 true
	"quickview.enabled": true,

	// URL 없는 확장 기능의 이미지 미리보기를 표시하려면 true
	"quickview.extensionlessImagePreview": true,

	// Enable/disable navigation in recent files
	"recent-files.navigation": true,

	// Enable/disable JavaScript Code Refactoring
	"refactoring.JSRefactoring": true,

	// 문서 끝을 넘어선 스크롤을 활성화 하려면 true
	"scrollPastEnd": false,

	// 모든 코드 힌트를 비활성화 하려면 false
	"showCodeHints": true,

	// 문자를 선택한 경우 깜빡이는 커서 표시
	"showCursorWhenSelecting": false,

	// 코드 왼쪽의 “여백”에 행 번호를 표시하려면 true
	"showLineNumbers": true,

	// 새 블록을 만들 때 자동 들여쓰기
	"smartIndent": true,

	// 소프트 탭 작동을 끄려면 false
	"softTabs": true,

	// 프로젝트 트리에서 디렉토리 우선 정렬하려면 true
	"sortDirectoriesFirst": false,

	// 공백 기반의 들여쓰기를 위한 공백 수
	"spaceUnits": 4,

	// 실시간 미리보기를 위한 빌트인 서버 포트 번호
	"staticserver.port": 0,

	// 커서가 있는 행의 배경 색을 강조하려면 true
	"styleActiveLine": false,

	// 탭 표시를 위한 공백 수
	"tabSize": 4,

	// Brackets 테마 선택
	"themes.theme": "light-theme",

	// 사용자 정의 스크롤 바를 허용하려면 true
	"themes.themeScrollbars": true,

	// 인라인 색상 편집기에서 대문자 16진수 색을 생성하려면 true
	"uppercaseColors": false,

	// 공백 대신 탭을 사용하려면 true
	"useTabChar": false,

	// 뷰포트 폭을 초과하는 행 감싸기
	"wordWrap": true
}
